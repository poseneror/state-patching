{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2017", "es7", "es6", "dom"],
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "./**/*.spec.ts",
    "./**/*.spec.tsx",
    "dist"
  ]
}
